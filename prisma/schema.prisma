// prisma/schema.prisma

generator client {
  provider = "prisma-client"
    output   = "../src/lib/generated/prisma"
}

datasource db {
  provider = "postgresql"

}

model User {
  id           String   @id @default(cuid())
  email        String?  @unique
  username     String
  password     String? 
  name         String
  avatar       String?
  accessToken  String?
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sessions     Session[] 
   settings     UserSettings?
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}


model UserSettings {
  id              String  @id @default(uuid())
  userId          String  @unique

  provider        String
  model           String
  apiKeyEncrypted String

  temperature     Float   @default(0.7)
  maxTokens       Int     @default(500)
  streaming       Boolean @default(true)

  tone            String
  niche           String
  format          String
  ctaStyle        String

  emojiDensity    String
  hookStrength    String
  engagementBoost Boolean @default(false)
  autoThreadSplit Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}